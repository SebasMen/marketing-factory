{
  "name": "core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/core/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": [
          "node-env=production"
        ]
      }
    },
    "build:dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p apps/core/tsconfig.app.json --sourceMap && tsc-alias -p apps/core/tsconfig.app.json",
        "cwd": "."
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nodemon --config apps/core/nodemon.json",
        "cwd": "."
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    }
  }
}